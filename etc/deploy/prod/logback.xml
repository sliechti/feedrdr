<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="true">
	<!-- Console Appender -->
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n
			</pattern>
		</encoder>
	</appender>
	<!-- File Logger Appender -->
	<appender name="FILE"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- daily rollover -->
			<fileNamePattern>${user.home}/logs/co.feeder.%d{yyyy-MM-dd}.log</fileNamePattern>
			<!-- keep 30 days' worth of history capped at 3GB total size -->
			<maxHistory>30</maxHistory>
			<totalSizeCap>3GB</totalSizeCap>
			<maxFileSize>100MB</maxFileSize>
		</rollingPolicy>
		<withJansi>true</withJansi>
		<encoder>
			<pattern>%-4relative [%thread] %-5level %logger{35} - %msg%n%ex
			</pattern>
		</encoder>
	</appender>
	<!--  file appender for cron logs usage :LoggerFactory.getLogger("cronlogs") -->
	<appender name="CRON_LOGS_FILE"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- daily rollover -->
			<fileNamePattern>${user.home}/logs/co.feeder.cron.%d{yyyy-MM-dd}.log</fileNamePattern>
			<!-- keep 30 days' worth of history capped at 3GB total size -->
			<maxHistory>30</maxHistory>
			<totalSizeCap>3GB</totalSizeCap>
			<maxFileSize>100MB</maxFileSize>
		</rollingPolicy>
		<withJansi>true</withJansi>
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n%ex
			</pattern>
		</encoder>
	</appender>
    <!-- additivity=false ensures analytics data only goes to the analytics log -->
    <logger name="cronlogs" level="DEBUG" additivity="false">
        <appender-ref ref="CRON_LOGS_FILE"/>
    </logger>
	<!-- SMTP Appender -->
	<appender name="EMAIL" class="ch.qos.logback.classic.net.SMTPAppender">
		<evaluator class="ch.qos.logback.classic.boolex.OnMarkerEvaluator">
			<marker>NOTIFY_ADMIN</marker>
			<!-- you specify add as many markers as you want -->
		</evaluator>
		<smtpHost>smtp.feedrdr.co</smtpHost>
		<to>dev@feedrdr.co</to>
		<username>mailer@feedrdr.co</username>
		<password>FeedRdr007</password>
		<from>feedrdr-slf4j</from>
		<subject>%date %-5level %logger{35} - %message%n</subject>
		<layout class="ch.qos.logback.classic.html.HTMLLayout">
			<pattern>%date %-5level %logger{35} - %message%n</pattern>
		</layout>
	</appender>
	<logger name="feedreader.feed.utils.Fetch" level="INFO" />
	<root level="INFO">
		<appender-ref ref="FILE" />
		<appender-ref ref="STDOUT" />
		<appender-ref ref="EMAIL" />
	</root>
	<logger name="feedreader" level="INFO" />
</configuration>
